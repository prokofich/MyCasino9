<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#0fa38a"
    tools:context=".view.fragments.TutorialsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_tut_img"/>

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_rules_tv_title_rules"
                android:background="@drawable/background_tv_menu1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:text="RULES"
                android:fontFamily="@font/creepster"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/id_tv_title_rules1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/creepster"
                android:text="for one player"
                android:textSize="35sp"
                android:background="@drawable/background_tv_menu1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_title_rules"/>

            <TextView
                android:id="@+id/id_rules_tv_rules1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="25sp"
                android:background="@drawable/background_tv_menu1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_tv_title_rules1"/>


            <TextView
                android:id="@+id/id_tv_title_rules2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/creepster"
                android:text="for two players"
                android:textSize="35sp"
                android:background="@drawable/background_tv_menu1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_rules1"/>

            <TextView
                android:id="@+id/id_rules_tv_rules2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="25sp"
                android:background="@drawable/background_tv_menu1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_tv_title_rules2"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_rules_button_menu"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="70dp"
                android:text="MENU"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:fontFamily="@font/creepster"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/id_rules_tv_rules2"
                android:background="@drawable/background_button_menu1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>